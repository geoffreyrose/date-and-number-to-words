{
    "name": "geoffreyrose/date-and-numbers-to-words",
    "description": "Converts PHP Dates, Carbon objects and numbers to words ",
    "keywords": ["Carbon", "PHP Dates", "PHP Dates To Words", "PHP Numbers To Words", "Ordinal Numbers Words",  "Ordinal Date Words"],
    "autoload": {
        "psr-4": {
            "DateAndNumberToWords\\": "src/DateAndNumberToWords"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "Tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "nesbot/carbon": "^2.66",
        "ext-intl": "*"
    },
    "config": {
        "discard-changes": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.5"
    },
    "scripts": {
        "post-update-cmd": [
            "bash tools/setup.sh"
        ],
        "post-install-cmd": [
            "bash tools/setup.sh"
        ]
    }
}
